<resources xmlns:android="http://schemas.android.com/apk/res/android">

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat">
        <item name="colorPrimary">@color/primary</item>
        <item name="colorAccent">@color/primaryAccent</item>
        <item name="android:textColorSecondary">@color/primary</item>

    </style>

    <style name="MyNavigationDrawerTheme" parent="MaterialNavigationDrawerTheme">
        <item name="colorPrimary">@color/primary</item>
        <item name="colorPrimaryDark">@color/primaryDark</item>
        <item name="colorAccent">@color/primaryAccent</item>
        <item name="drawerType">@integer/DRAWERTYPE_IMAGE</item>
        <item name="subheaderStyle">@style/MySubheaderTheme</item>

    </style>

    <!--This doesn't seem to work atm. Issue witht the library so not much i can do about it. Removed sub headers for now.-->
    <style name="MySubheaderTheme">
        <item name="subheaderTitleColor">@color/primaryAccent</item>
    </style>

    <style name="CardViewStyle" parent="CardView.Dark">
        <item name="android:foreground">?android:attr/selectableItemBackground</item>

    </style>

    <style name="AceButton" parent="@style/Widget.AppCompat.Button.Borderless">
        <item name="android:background">@color/primary</item>
        <item name="android:textColor">@color/textPrimary</item>
    </style>

    <style name="NormalButton" parent="@style/Widget.AppCompat.Button.Borderless">
        <item name="android:background">@color/textPrimary</item>
        <item name="android:textColor">@color/primary</item>
    </style>

    <style name="NoneButton" parent="@style/Widget.AppCompat.Button.Borderless">
        <item name="android:background">@color/backgroundDark</item>
        <item name="android:textColor">@color/textPrimary</item>
    </style>



</resources>




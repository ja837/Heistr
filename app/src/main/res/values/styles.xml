<resources xmlns:android="http://schemas.android.com/apk/res/android">

    <style name="AppTheme" parent="Base">
        <!-- Don't need to add anything here. -->
    </style>

    <!-- Base application theme. -->
    <style name="Base" parent="Theme.AppCompat">
        <item name="colorPrimary">@color/primary</item>
        <item name="colorAccent">@color/primaryAccent</item>
        <item name="android:textColorSecondary">@color/primary</item>
        <item name="preferenceTheme">@style/PreferenceThemeOverlay.v14.Material</item>
        <item name="windowActionModeOverlay">true</item>
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="ActionBar" parent="Base">
        <item name="windowActionBar">true</item>
        <item name="windowNoTitle">false</item>
    </style>

    <style name="ActionBar.SettingsTheme">
        <!-- Don't need to add anything here. -->
    </style>

    <style name="CardViewStyle" parent="CardView.Dark">
        <item name="android:foreground">?android:attr/selectableItemBackground</item>

    </style>



</resources>




<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context=".BuildListActivity$PlaceholderFragment">

    <com.dawgandpony.pd2skills.utils.RecyclerViewEmptySupport
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/rvBuilds"
        />

    <RelativeLayout
        android:id="@+id/emptyElement"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:visibility="gone">

        <TextView
            android:id="@+id/emptyTxt1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/sad_face"
            android:textColor="#9E9E9E"
            android:textSize="50sp"
            android:layout_centerInParent="true"

            />

        <TextView

            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/empty_build_list"
            android:textColor="#9E9E9E"
            android:textSize="19sp"
            android:layout_below="@+id/emptyTxt1"
            android:paddingTop="30dp"

            />

    </RelativeLayout>


</RelativeLayout>

<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
            xmlns:tools="http://schemas.android.com/tools"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            tools:context="com.jamieadkins.heistr.Fragments.NewSkillTreeFragment">


<LinearLayout android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:padding="@dimen/activity_horizontal_margin"
              android:orientation="vertical">

    <TextView android:id="@+id/tvPointsRemaining"
              android:layout_width="wrap_content"
              android:layout_height="wrap_content"
              android:layout_gravity="right"
              android:textSize="15sp"
              android:textColor="@color/textPrimary"
              android:text="120/120" />

    <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

        <TextView android:layout_width="wrap_content"
                  android:layout_height="wrap_content"
                  android:text="@string/tier4"
                  android:id="@+id/tier4"
                  android:paddingBottom="4dp"/>

        <com.jamieadkins.heistr.utils.SkillCardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/skill_tier4_skill1"
                android:layout_below="@+id/tier4"/>
    </RelativeLayout>

    <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingTop="@dimen/activity_vertical_margin">

        <TextView android:layout_width="wrap_content"
                  android:layout_height="wrap_content"
                  android:text="@string/tier3"
                  android:id="@+id/tier3"
                  android:paddingBottom="4dp"/>
        <LinearLayout
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/ll_skill_tier3"
                android:layout_below="@+id/tier3">

            <com.jamieadkins.heistr.utils.SkillCardView
                    android:layout_marginTop="4dp"
                    android:layout_marginBottom="4dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/skill_tier3_skill1"/>

            <com.jamieadkins.heistr.utils.SkillCardView
                    android:layout_marginTop="4dp"
                    android:layout_marginBottom="4dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/skill_tier3_skill2"/>
        </LinearLayout>

    </RelativeLayout>

    <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingTop="@dimen/activity_vertical_margin">

        <TextView android:layout_width="wrap_content"
                  android:layout_height="wrap_content"
                  android:text="@string/tier2"
                  android:id="@+id/tier2"
                  android:paddingBottom="4dp"/>

        <LinearLayout
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/ll_skill_tier2"
                android:layout_below="@+id/tier2">

            <com.jamieadkins.heistr.utils.SkillCardView
                    android:layout_marginTop="4dp"
                    android:layout_marginBottom="4dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/skill_tier2_skill1"/>

            <com.jamieadkins.heistr.utils.SkillCardView
                    android:layout_marginTop="4dp"
                    android:layout_marginBottom="4dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/skill_tier2_skill2"/>
        </LinearLayout>

    </RelativeLayout>

    <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingTop="@dimen/activity_vertical_margin">

        <TextView android:layout_width="wrap_content"
                  android:layout_height="wrap_content"
                  android:text="@string/tier1"
                  android:id="@+id/tier1"
                  android:paddingBottom="4dp"/>

        <com.jamieadkins.heistr.utils.SkillCardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/skill_tier1_skill1"
                android:layout_below="@+id/tier1"/>
    </RelativeLayout>



</LinearLayout>

</ScrollView>

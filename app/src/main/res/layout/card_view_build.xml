<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent" android:layout_height="match_parent"
    >

    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/cvBuilds"
        android:elevation="2dp"
        android:background="@drawable/shadow"
        android:foreground="@drawable/selector_build_list"
        android:layout_margin="5dp"


        >

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="16dp"
            android:id="@+id/rlBuilds"
            >

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/tvPointsUsed"
                android:textSize="50sp"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:layout_alignParentTop="true"
                android:layout_marginRight="16dp"
                android:text="0"
                />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/tvName"
                android:layout_toRightOf="@+id/tvPointsUsed"
                android:layout_toEndOf="@+id/tvPointsUsed"
                android:layout_alignParentTop="true"
                android:textSize="30sp"
                android:text="Untitled Build"
                />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/tvPrimaryWeapon"
                android:layout_toRightOf="@+id/tvPointsUsed"
                android:layout_toEndOf="@+id/tvPointsUsed"
                android:layout_below="@+id/tvName"
                android:text="Car-4"
                />

        </RelativeLayout>

    </android.support.v7.widget.CardView>

</LinearLayout>